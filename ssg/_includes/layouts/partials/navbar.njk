<nav class="navbar is-primary" role="navigation" aria-label="main navigation">
    <div class="container">
        <div class="navbar-brand">
            <a class="navbar-item" href="/">
                <img src="/images/logo.png" width="187" height="182" class="ea-brand-logo mr-2"/>
                <h1 class="title is-4 has-text-white">Eagles Line Dancers</h1>
            </a>

            <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarMain">
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
            </a>
        </div>

        <div id="navbarMain" class="navbar-menu">
            <div class="navbar-start">
                {% for item in aggregate.mainNavigation %}
                    {% if item.__component == "navigation.startseite" %}
                        <a class="navbar-item" href="/">{{ item.Beschriftung }}</a>
                    {% elif item.__component == "navigation.seiten" %}
                        <div class="navbar-item has-dropdown is-hoverable">
                            <a class="navbar-link">{{ item.Beschriftung }}</a>
                            <div class="navbar-dropdown">
                                {% for subItem in item.Seiten %}
                                    <a class="navbar-item" href="/{{ subItem.Seite.Permalink | slug }}/">{{ subItem.Beschriftung }}</a>
                                {% endfor %}
                            </div>
                        </div>
                    {% elif item.__component == "navigation.seite" %}
                        <a class="navbar-item" href="/{{ item.Seite.Permalink | slug }}/">{{ item.Beschriftung }}</a>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
</nav>
