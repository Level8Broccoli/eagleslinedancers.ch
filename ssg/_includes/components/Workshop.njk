{%- from "components/FormattierterText.njk" import FormattierterText -%}

{% macro Workshop(params) %}
    <div class="table-container">
        <table class="table is-hoverable is-bordered">
            <thead>
                {% for title in params.titles %}
                    <tr>
                        <th colspan="2" class="has-text-centered">
                            {{ FormattierterText({content: title.FormattierterText}) }}
                        </th>
                    </tr>
                {% endfor %}
            </thead>
            <tbody>
                {% for row in params.rows %}
                    {% for cell in row.Tabellenzellen %}
                        <tr>
                            {% if loop.first %}
                                <td rowspan="{{ row.Tabellenzellen.length }}" style="vertical-align: middle;">
                                    <h6 class="title is-6">{{ row.Zeilentitel }}</h6>
                                </td>
                            {% endif %}
                            <td>
                                <p>{{ cell.Tabellenzeile }}</p>
                            </td>
                        </tr>
                    {% endfor %}
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endmacro %}
