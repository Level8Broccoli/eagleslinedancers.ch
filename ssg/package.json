    "sass": "sass --style=compressed styles/sass/main.scss styles/css/main.css",
    "build": "npm run sass && eleventy"
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.0-beta.8",
    "@11ty/eleventy-img": "^1.0.0",
    "bulma": "^0.9.3",
    "clean-css": "^5.2.2",
    "markdown-it": "^12.3.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.45.1"
  }
}
