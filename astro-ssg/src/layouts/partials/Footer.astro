---
import fussNavigation from "../../_data/fussnavigation.json";

const secondNavigation = fussNavigation.Navigationspunkte
    .filter(item => {
        if (item.__component === "navigation.seite") {
            return "Permalink" in item.Seite;
        }
        return true;
    });
---

<section class="hero is-primary">
    <div class="hero-body">
        <footer>
            <div class="container">
                <div
                    class="is-flex is-justify-content-space-between is-align-items-center is-flex-wrap-wrap"
                >
                    <div class="left">
                        {
                            secondNavigation.map((item) => {
                                if (
                                    item.__component === "navigation.startseite"
                                ) {
                                    return (
                                        <a class="button is-primary" href="/">
                                            {item.Beschriftung}
                                        </a>
                                    );
                                } else {
                                    return (
                                        <a
                                            class="button is-primary"
                                            href=`/${ item.Seite.Permalink }/`
                                        >
                                            {item.Beschriftung}
                                        </a>
                                    );
                                }
                            })
                        }
                    </div>
                    <div class="right">
