                <div class="is-flex is-justify-content-space-between is-align-items-center is-flex-wrap-wrap">
                    <div class="left">
                      {secondNavigation.map(item => {
                        if (item.__component === "navigation.startseite") {
                           return <a class="button is-primary" href="/">{ item.Beschriftung }</a>;
                        } else {
                           return <a class="button is-primary" href="/{ item.Seite.Permalink | slug }/">{ item.Beschriftung }</a>;
                        }
                      })}
