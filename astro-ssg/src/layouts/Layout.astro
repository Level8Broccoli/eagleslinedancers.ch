---
import Icons from "../components/Icons.astro";

interface Props {
	title?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="de">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title !== undefined ? title + " | " : "" }Eagles Line Dancers</title>
		<Icons />
	</head>
	<body>
		<slot />
	</body>
</html>
